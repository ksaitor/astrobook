{
  "manifest_version": 2,
  "name": "AstroBook",
  "description": "Get zodiac signs of your Facebook friends",
  "version": "1.0",
  "icons": { "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "AstroBook"
  },
  "content_security_policy": "script-src 'self' https://s3-ap-southeast-1.amazonaws.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": ["jquery.min.js", "app.js"],
      "css": ["app.css"]
    }
  ],
  "permissions": [
    "tabs", "http://*/", "https://*/", "storage"
  ],
  "web_accessible_resources": [
    "matches.json"
  ]
}
